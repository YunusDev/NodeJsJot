<div class="col-4">
    {{#errors}}

        <div class="alert alert-danger">{{text}}</div>

    {{else}}
    {{/errors}}
    <div class="card card-body ">
        <h3>Video Idea</h3>
        <form method="POST" action="/ideas/edit/{{idea.id}}/?_method=PUT">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" value="{{idea.title}}" name="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="details">Details:</label>
                <textarea name="details" class="form-control" id="details" cols="15" rows="5">{{idea.details}}</textarea>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

